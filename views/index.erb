<div class="background"> </div>
<div class="lien-app">
	<form class="1" action="/" method="post" accept-charset="utf-8">
		<input type="text" name="liens[url]" placeholder="insérer votre lien">
	
		<br>
		
		<textarea name="liens[description]" value="ajouter une description">ajouter une description (par défaut)</textarea>
	
		<br>
		<input type="submit" value="Valider">

	</form>

	
	<form class="bouton"> 
	Domaine : 
	<br>
		
		Frontend: <input type="checkbox" name="profil" value="frontend"/><br />

		Backend: <input type="checkbox" name="profil" value="backend"  /><br /> 

		<ul>
				<li class="bouton"
					<form>
						<select name="si_frontend">
							<option value="par défaut">Choississez un sous-domaine ...
							<option value="html">UX
							<option value="langages">Jquery
							<option value="outils"  >Scss
							<option value="Jaune"> ...
						</select>
					<input type="submit" value="Valider">
					</form>
				</li>
		</ul>
	
			<ul>
				<li class="bouton">
					<form>
						<select name="si_backend">
							<option value="par défaut">Choississez un sous-domaine ...
							<option value="html">HTML/CSS
							<option value="langages">Langages de programmation
							<option value="outils"  >Rails
							<option value="Jaune">Dojos
						</select>
					<input type="submit" value="Valider">
					</form>
		</ul>
	</form> 
	
</div>

	<hr>
<h2>Voici les liens ajoutés : </h2>
	<hr>
<% @liens.each do |liens| %>
	<div class="Liens">
		<div class="url">Adresse du site :<a href="<%= liens.url %>"  target="_blank"> <%= liens.url %> </a></div>
		<div class="description">Description du site :<%= liens.description %> </div>
			
		<div class="domaine">Domaine :<%= liens.domaine %> </div>
						
 		<form id="edit-liens<%= liens.id %>" action="/<%= liens.id %>" method="post">
			<input type="hidden" name="_method" value="put">
			<input type="submit" id="task-edit-<%= liens.id %>" value="Edit">
		</form>
		<form id="delete-liens<%= liens.id %>" action="/<%= liens.id %>" method="post">
				<input type="hidden" name="_method" value="delete">
				<input type="submit" value="Delete">
		</form>


	</div>	
	<hr>
<% end %>		
	



